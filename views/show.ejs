    <ol class="list-group list-group-numbered container mt-5">
      <%if(tasks.length === 0){%>
        <h1 class="text-danger text-center mt-5">No remaining task...</h1>
      <%}%>
      <% tasks.forEach( (task)=>{%>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold fs-5"><%= task.title%></div>
            <%= task.desc%>...<span class="text-danger">| <%= task.deadline%></span>
          </div>
          <a href="/edit/<%= task.id%>">
            <span class="fs-5 badge rounded-pill">üñä</span>
          </a>
          <a href="/delete/<%= task.id%>">
            <span class="fs-5 badge rounded-pill">‚ùå</span>
          </a>
        </li>
        <% })%>
    </ol>


